{
  "name": "Frappe Development Environment",
  "image": "ubuntu:22.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": ".devcontainer/setup.sh",
  "forwardPorts": [8000, 8001, 9000],
  "portsAttributes": {
    "8000": {
      "label": "Frappe Site",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "remoteUser": "root"
}
